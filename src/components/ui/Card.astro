---
interface Props {
  title: string;
  src: string;
}

const { title, src } = Astro.props;
---

<div
  class="p-3 w-60 h-80 bg-gray-900 rounded-xl border border-gray-600 truncate hover:border-white transition-all"
>
  <slot name="buttons" />
  <div class="flex flex-col gap-2 items-center justify-center mt-10">
    <img
      src={src ? src : "/user.svg"}
      alt="imagen de usuario"
      class="h-20 w-20 border-4 rounded-full p-2 overflow-hidden"
    />
    <h1 class="text-xl font-bold px-2">{title}</h1>
    <slot />
  </div>
</div>
